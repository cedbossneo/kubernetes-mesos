#!/usr/bin/env bash

# Return true if the command exists
# Usage: cmd-exists [-q] <cmd>
# Flags:
# -q - enabled quiet mode

set -e

QUIET=false
if [ "$1" == "-q" ]; then
    QUIET=true
    shift
fi

cmd_name="$1"
[ -z "${cmd_name}" ] && echo "No command name supplied" && exit 1

if ! type -p "${cmd_name}" &> /dev/null; then
    [ ! ${QUIET} ] && echo "Command not found: ${cmd_name}"
    exit 127
fi